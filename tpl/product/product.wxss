.item {
  width: 220rpx;
  height: 300rpx;
  margin: 14rpx 8rpx;
  display: flex;
  flex-direction: column;
}

/*展示图  */

.simg {
  width: 100%;
  height: 220rpx;
}

.title {
  font-size: 22rpx;
  margin: 4rpx 8rpx;
}

/*价格与销量  */

.pands {
  margin-top: 8rpx;
}

.pands, .price, .sales {
  display: flex;
  flex-direction: row;
}

.price, .sales {
  font-size: 18rpx;
  color: gray;
}

.price {
  margin-left: 8rpx;
}

.price-num {
  color: #ff4b66;
}

.sales {
  margin-left: auto;
  margin-right: 8rpx;
}
