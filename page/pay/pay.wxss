.item {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 200rpx;
  background-color: white;
  margin-top: 18rpx;
}

.simg {
  width: 180rpx;
  height: 180rpx;
  margin: 10rpx 10rpx;
}

.right {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.title {
  margin: 14rpx 12rpx;
  font-size: 28rpx;
}

.pandc {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: auto;
  margin-bottom: 20rpx;
}

.price, .count {
  font-size: 30rpx;
  color: gray;
}

.price {
  display: flex;
  flex-direction: row;
  margin-left: 18rpx;
}

.count {
  margin-right: 50rpx;
  margin-left: auto;
}

.price-num {
  color: #ff4b66;
}

/*选择地址  */

.selectaddress {
  width: 100%;
  height: 150rpx;
  display: flex;
  flex-direction: row;
  margin-top: 12rpx;
  background-color: white;
  margin-bottom: 100rpx;
}

.addicon {
  width: 50rpx;
  height: 50rpx;
  margin: 50rpx 25rpx;
}

.addtext {
  font-size: 28rpx;
  color: gray;
  line-height: 150rpx;
  margin-left: 20rpx;
}

.addyjt {
  width: 50rpx;
  height: 50rpx;
  margin: 50rpx 20rpx 50rpx auto;
}

.address {
  width: 100%;
  height: 100rpx;
  margin-top: 12rpx;
  font-size: 30rpx;
  background-color: white;
  margin-bottom: 100rpx;
}

.address-text {
  margin: 8rpx 12rpx;
}

/*底部  */

.foot {
  width: 100%;
  height: 100rpx;
  background-color: white;
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: row;
  border-top: 1px solid gainsboro;
}

.totalprice {
  color: #ff4b66;
  margin-left: auto;
  margin-top: 8rpx;
  margin-right: 12rpx;
  font-size: 28rpx;
}
.pay-btn{
  width: 200rpx;
  height: 100%;
  background-color: #ff4b66;
  color: white;
  text-align: center;
  line-height: 100rpx;
  font-size: 38rpx;
}